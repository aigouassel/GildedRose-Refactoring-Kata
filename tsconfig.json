{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "@build": ["build/index"],
      "@core": ["lib/gilded-rose/core/index"],
      "@adapters": ["lib/gilded-rose/adapters/index"],
      "@ddd": ["lib/ddd/index"]
    }
  },
  "exclude": ["node_modules"]
}
