{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "no-any": true,
    "no-async-without-await": true,
    "max-classes-per-file": [true, 1],
    "arrow-return-shorthand": true,
    "class-name": true,
    "no-console": false,
    "variable-name": ["allow-trailing-underscore"]
  },
  "rulesDirectory": ["build", "lib", "tests"]
}
